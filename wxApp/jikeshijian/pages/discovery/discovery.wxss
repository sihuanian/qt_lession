.container {
  width: 100vw;
  height: 100vh;
  background-color: #f8f8f8;
  padding: 40rpx 80rpx 0;
  box-sizing: border-box;
}
.hot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 70rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.hot-icon {
  background-color: #fd9027;
  color: #fff;
  width: 120rpx;
  height: 100%;
  line-height: 70rpx;
  border-radius: 20rpx 0 0 20rpx;
  text-align: center;
}
.hot-text {
  background-color: #fff;
  color: #fd9027;
  line-height: 70rpx;
}
.hot-arrow {
  line-height: 70rpx;
  padding: 0 10rpx;
  color: #4a4a4a;
}
.suggest {
  width: 100%;
  height: 880rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.suggest-top {
  width: 100%;
  height: 280rpx;
  border-radius: 0 0 50% 50%;
  background-color: #ff0;
  overflow: hidden;
}
.suggest-top image {
  width: 100%;
  height: 100%;
}
