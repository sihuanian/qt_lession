hdbg_color = #e54847
font_color_block = #fff
bd_color = #e5e5e5

html,
body 
    width 100%

.flex
    display flex

.flex1
    flex 1

.action-list.section-title
    padding-left 0.4rem

.section-title
    font-size 17px
    color #000

.nav
    height 1.067rem
    font-size 18px
    text-align center
    background-color hdbg_color
    padding 6px
    box-sizing border-box
    .arrow-left
        float left
        height 100%
        position relative
        &:after
            content ''
            width 12px
            height 12px
            position absolute
            top 50%
            left 16px
            border 2px solid #fff
            border-width 0 0 2px 2px
            transform rotate(45deg) translateY(-50%)
    span
        color font_color_block
        display inline-block

.page
    background #f4f4f4
    position relative
    z-index 1
    margin 0
    color #555
    min-width 3.1rem
    -webkit-tap-highlight-color rgba(255, 255, 255, 0)
    font 14px/1.5 Arial,Helvetica,sans-serif
    section
        background-color #fff
        border-bottom 1px solid bd_color
    .movie-header
        padding 0
        background #f8f8f8
        border-bottom none
        .movie
            color #fff
            padding 0.4rem
            line-height 1
            position relative
            box-sizing border-box
            filter blur(0)
            &-background,
            &-filter
                position absolute
                top 0
                bottom 0
                right 0
                left 0
            &-background
                z-index 0
                -webkit-filter blur(0.6rem)
                filter blur(0.6rem)
                background-image url(./images/header-bg.jpg)
                background-size cover
                background-repeat no-repeat
                background-position-y 40%
            &-filter
                background-color #40454d
                opacity 0.5
            &-container
                z-index 1
                position relative
                overflow scroll
                .movie-cover
                    float left
                    width 2.854rem
                    height 4rem
                    border 1px solid #f0f2f3
                    position relative
                    .img
                        width 100%
                    &:after
                        content ''
                        position absolute
                        width 1rem
                        height 1rem
                        top 50%
                        left 50%
                        transform translate(-50%, -50%)
                        background url(./images/bofang.png) no-repeat
                        background-size 100% auto
                        opacity 0.7
                .movie-content
                    overflow hidden
                    padding-left 0.4rem
                    .movie-name
                        font-size 17px
                        margin 0.08rem 0
                    .movie-ename
                        font-size 12px
                        margin-bottom 0.3rem
                    .movie-score
                        font-size 12px
                        margin-bottom 0.3em
                        .rating
                            padding-bottom 0.2rem
                            .img
                                width 0.48rem
                                margin-right 2px
                            span
                                font-size 0.6rem
                                color #ffc600
                    .movie-detail
                        font-size 12px
                        margin-bottom 0.16rem
                        opacity 0.7
                        div,p
                            margin-bottom 0.14rem
            .operating
                margin-top 0.5em
                div
                    border 1px solid rgba(255, 255, 255, .4)
                    background-color rgba(255, 255, 255, .4)
                    font-size 14px
                    color #ffffff
                    position relative
                    z-index 2
                    text-align center
                    padding 0.25rem 0
                    border-radius 4px
                    img 
                        vertical-align middle
                    span
                        vertical-align middle
                .movie-watch
                    margin-right .3rem
                    img
                        width 14px
                .movie-mark
                    img
                        width 18px
    .section-seperate
        padding-top 0.4rem
        margin-bottom 0.3rem
        border-top 1px solid bd_color
        .text-expander
            &__content.close
                min-height 65px
                display -webkit-box
                overflow hidden
                text-overflow ellipsis
                word-break break-all
                -webkit-box-orient vertical
                -webkit-line-clamp 3
            &__button
                height 0.7rem
                text-align center
                .icon-chevron__down
                        width 10px
                        height 10px
                        border 1px solid #aaa
                        border-width 0 1px 1px 0
                        transform rotateZ(45deg)
                        display inline-block
                        box-sizing border-box
                        transition transform 0.5s
                .icon-chevron__down.up
                    transform rotateZ(-135deg)
    .section-seperate
    .section-expander
        padding 0.4em 0.4em
        .movie-celebrities
            width 100%
            padding 0.3rem 0.3rem 0.1rem 0.3rem
            overflow-x scroll
            white-space nowrap
            box-sizing border-box
            li
                text-align center
                display inline-block
                padding 0.04rem
                .link
                    color #000000
                    .movie-celebrities__pic
                        width 1.7334rem
                        height 2.4rem
                        margin 0.05em
                        img
                            width 100%
                    span
                        display block
                        font-size 0.2rem
                        text-overflow ellipsis
                        overflow hidden
                        white-space nowrap
                    .movie-celebrities-roles
                        color #999
                
    .movie-booking
        padding-bottom 0.2rem
        .section-title
            padding-left 0.4rem
        .weui-flex
            text-align center
            .placeholder
                span
                    font-size 24px
                    color #d96a3d
                p
                    color #bababa
                    margin-top 0.1rem
    .movie-video
        width 100%
        padding 0.3rem 0.3rem 0.1rem 0.3rem
        overflow-x scroll
        white-space nowrap
        box-sizing border-box
        li
            text-align center
            padding 0.04rem
            display inline-block
            .link
                color #000000
                .movie-celebrities__pic
                    width 1.7334rem
                    height 2.4rem
                    margin 0.05em
                    img
                        width 100%

#toast
    display none

.active
    display block !important




