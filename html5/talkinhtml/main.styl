link_color = #3377aa 
border_color = #eaeaea

* 
    margin 0
    padding 0
        
a
    text-decoration none
    color link_color
    cursor pointer
    &:visited
        color #669
    &:hover
        color #fff
        background link_color

body 
    font-size 12px
    font-family sans-serif
    line-height 1.62
    color #111

table
    border-collapse collapse
    border none 
    padding 0
    margin 0

#billboard
    width 300px
    margin-bottom 50px
    h2
        color #111
        padding-bottom 10px
        border-bottom 1px solid border_color
        font-size 16px
        margin-bottom 12px
        line-height 150%
        span 
            font-size 13px
            margin-left 12px
    td
        padding 7px 0
        font-weight 600
        border-bottom 1px solid border_color
        &:nth-child(2n+1)
            width 20px
            font-size 9px
            text-align center
        &.title
            width 290px
